[source.crates-io]
replace-with = 'mirror'

[source.mirror]
registry = "sparse+https://mirrors.bfsu.edu.cn/crates.io-index/"

[registries.mirror]
index = "sparse+https://mirrors.bfsu.edu.cn/crates.io-index/"

[build]
rustc-wrapper = "{{ template "bin" . }}/sccache"

[profile.dev]
debug = "line-tables-only"

[profile.dev.package."*"]
debug = false

[profile.debugging]
inherits = "dev"
debug = true
